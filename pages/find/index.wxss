page{
  background:#f1f1f1;
}
.mpnavbar {
  background: #fff;
  font-size: 28rpx;
  border-bottom: 1rpx solid #ccc;
}
.weui-navbar{
  position: relative;
  border: none;
  z-index: 500;
  top: 0;
  width: 100%;
  display: flex;
}
.weui-navbar-item{
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
}
.aaa{
  color: #00E2CE;
}
.aaa::after{
  content: '';
  width: 50%;
  height: 6rpx;
  background: #00E2CE;
  margin: 0 auto;
  display: block;
  position: absolute;
  bottom: 1rpx;
  left: 50%;
  transform: translateX(-50%);
}
/* 列表样式 */
.shop-list-items{
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.shop-list-items .list-items-list{
  width: 50%;
  height: 506rpx;
  padding: 0 10rpx 22rpx 10rpx;
  box-sizing: border-box;
}
.list-images{
  width: 100%;
  height: 326rpx;
  overflow: hidden;
}
.list-images image{
  width: 100%;
  height: 100%;
}
.box-items{
  background: #fff;
  border-radius: 6px;
  overflow: hidden;
  height: 100%;
}
.list-text{
  padding: 18rpx 14rpx;
  margin-top: 20rpx;
}
 .list-text .cool {
  font-size: 28rpx;
  height: auto;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list-text .discount {
  font-size: 28rpx;
  margin-top: 6rpx;
  padding: 10rpx 0;
  color: #ff0000;
}