page{
  background: #f0f0f5;
}
.mpnavbar {
  background: #fff;
  font-size: 28rpx;
  border-bottom: 1rpx solid #ccc;
}
.weui-navbar {
  position: relative;
  border: none;
  z-index: 500;
  top: 0;
  width: 100%;
  display: flex;
}
.weui-navbar-item {
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
}
.aaa {
  color: #00E2CE;
}
.aaa::after{
  content: '';
  width: 50%;
  height: 6rpx;
  background: #00E2CE;
  margin: 0 auto;
  display: block;
  position: absolute;
  bottom: 1rpx;
  left: 50%;
  transform: translateX(-50%);
}
  
.mark-true {
  padding: 80rpx 0 46rpx 0;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  
  }
  
.mark-true-image{
  width: 422rpx;
  height: auto;
  
}
.info{
  padding: 10rpx 0;
  text-align: center;
  margin-top: 6rpx;
}
.mark-false{
  padding: 15rpx 30rpx;
  box-sizing: border-box;
}
.mark-false .data-list{
  background: #fff;
  font-size: 28rpx;
  border-radius: 8px;
  padding: 15rpx 28rpx;
  margin: 20rpx 0;
  color: #757575;
}
.data-list>view{
  padding: 6rpx 0;
}
.recycle-type{
  display: flex;
  align-items: center;
}
.recycle-type .type-list{
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}
.recycle-type .type-list>view{
  padding: 4rpx 12rpx;
  margin: 0 10rpx;
  border-radius: 6px;
}