page{
  box-sizing: border-box;
  background: #ededed;
}
.address-info-bg{
  height: 240rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 28rpx;
  background: #00E2CE;
}
.address-info{
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  background: #fff;
  font-size: 28rpx;
  border-radius: 8px;
  padding: 20rpx 36rpx 20rpx 26rpx;
  width: 100%;
}
.info-right{
  flex: 1;
  padding-left: 20rpx;

}
.info-ph-box{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.info-name{
  font-size: 30rpx;
  font-weight: 600;
}
.info-ph{
  font-weight: 600;
}
.info-icon{
  border: 1rpx solid #ff0000;
  color: #ff0000;
  width: 56rpx;
  height: 28rpx;
  text-align: center;
  line-height: 28rpx;
  font-size: 26rpx;
  margin-top: 20rpx;
  padding: 2rpx;
}
.info-address{
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #878787;
  overflow:hidden; /*超出的文本隐藏*/
  text-overflow:ellipsis; /*溢出用省略号显示*/
  display:-webkit-box; /*作为弹性伸缩盒子模型显示。*/
  -webkit-box-orient:vertical; /*设置伸缩盒子的子元素排列方式--从上到下垂直排列*/
  -webkit-line-clamp:1; /*显示的行*/
}
.info-edit{
  color: #878787;
  display: flex;
  align-items: center;
}
.info-edit>image{
  width: 24rpx;
  height: 23rpx;
}
.datainfo-box{
  padding: 0 28rpx;
  margin-top: -50rpx;
}
.datainfo-items{
  background: #fff;
  font-size: 30rpx;
  padding: 16rpx 30rpx;
  border-radius: 8px;
}
.datainfo-content{
  padding: 26rpx 0;
  display: flex;
  justify-content:flex-start;
  align-items: flex-start;
  border-bottom: 1rpx solid #eaeaea;
}

.datainfo-cont-right{
  padding-left: 24rpx;
  flex: 1;
  display: block;
  padding-right: 40rpx;
  position: relative;
}
.datainfo-cont-left{
  width: 154rpx;
  height: 154rpx;
  overflow: hidden;
}
.datainfo-cont-left>image{
  width: 100%;
  height: 100%;
}
.cont-right-title{
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box; /*作为弹性伸缩盒子模型显示。*/
  -webkit-box-orient:vertical; /*设置伸缩盒子的子元素排列方式--从上到下垂直排列*/
  -webkit-line-clamp:2; /*显示的行*/
}
.cont-right-legend{
  color: #9d9d9d;
  font-size: 25rpx;
  margin-top: 10rpx;
}
.cont-right-price{
  color: #f94c4e;
  font-size: 26rpx;
  margin-top: 10rpx;
}
.cont-right-number{
  color: #333;
  font-size: 28rpx;
  position: absolute;
  bottom: 4rpx;
  right: 10rpx;
}
.info-list-box{
  width: 100%;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eaeaea;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.info-list-title{
  font-size: 28rpx;
  font-weight: 600;
}
.info-list-price{
  color: #f94c4e;
}
.info-list-liuyan{
  flex: 1;
  height: 100%;
  padding-left: 20rpx;
}
.info-list-liuyan>input{
  width: 100%;
  height: 100%;
  padding-left: 20rpx;
}
.submit-btn{
  display: flex;
  justify-content: center;
  flex-wrap: nowrap;
  align-items: center;
  width: 100%;
  height: 90rpx;
  font-size: 28rpx;
  position: fixed;
  bottom: 0;
  left: 0;
}
.submit-btn>view{
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn-right{
  background: #fd4746;
  color: #fff;
}
.filladdress{
  width: auto;
  padding: 10rpx 60rpx;
  margin: 10rpx auto;
  background: #00E2CE;
  color: #fff;
  border-radius: 8px;
}