.img-box {
  height: 680rpx;
  z-index: 100;
  margin:20rpx 0;
  box-sizing: border-box;
  border-radius: 10px;
}
.swiper-item{
  padding: 0 10rpx;
  box-sizing: border-box;
  border-radius: 14px;
  overflow: hidden;
  opacity: 0.4;
}
.img-box swiper {
  height: 680rpx;
}
.img-box image {
  width: 100%;
  height: 680rpx;
}
 .detail-box{
   margin:60rpx 30rpx 20rpx 30rpx;
   border-radius:8px;
   padding:10rpx 20rpx;
   box-shadow: 2rpx 2rpx 10rpx 2rpx #dedede;
 }
 .title-name{
   font-size: 38rpx;
   font-weight: 600;
   padding: 10rpx 0;
 }
 .bbb{
   opacity: 1;
 }
 .wxbtn-box {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
}
.wxbtn-box>view {
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #00E2CE;
  padding: 20rpx;
  color: #fff;
  border-radius: 6px;
}
    